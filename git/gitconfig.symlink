# Local/private config goes in the include
[include]
        path = ~/.gitconfig.local
	path = /Users/zz/.config/dev/gitconfig
[alias]
        co = checkout
        br = branch
        ci = commit
        st = status
        cob = checkout -b
        pf = push --force-with-lease --force-if-includes
        wtf     = !$ZSH/bin/git-wtf
        rank-contributors = !$ZSH/bin/git-rank-contributors
        count   = !git shortlog -sn
[color]
        diff = auto
        status = auto
        branch = auto
        ui = true
[core]
        excludesfile = ~/.gitignore
	editor = cursor --wait --reuse-window
[apply]
        whitespace = nowarn
[mergetool]
        keepBackup = false
[difftool]
        prompt = false
[help]
        autocorrect = 1
[push]
	default = current
        autoSetupRemote = true
[init]
	defaultBranch = main
[pull]
	rebase = false
[maintenance]
	repo = /Users/zz/world/trees/root/src
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
